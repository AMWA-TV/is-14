{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "NcParameterConstraintsString",
    "description": "String parameter constraints class",
    "allOf": [
        {
            "$ref": "NcParameterConstraints.json"
        }
    ],
    "type": "object",
    "required": [
        "maxCharacters",
        "pattern"
    ],
    "properties": {
        "maxCharacters": {
            "type": [
                "number",
                "null"
            ],
            "description": "Maximum characters allowed"
        },
        "pattern": {
            "anyOf": [
                {
                    "$ref": "NcRegex.json"
                },
                {
                    "type": "null"
                }
            ],
            "description": "Regex pattern"
        }
    }
}